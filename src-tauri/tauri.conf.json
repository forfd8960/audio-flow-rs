{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audio-flow",
  "version": "0.1.0",
  "identifier": "com.audioflow.app",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "AudioFlow",
        "width": 900,
        "height": 700,
        "resizable": true,
        "center": true
      },
      {
        "label": "overlay",
        "title": "Voice Overlay",
        "width": 450,
        "height": 120,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": true,
        "focusable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
